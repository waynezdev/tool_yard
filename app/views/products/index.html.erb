<main id="product-index">
    <section class="topbar">

        <div>logo</div>
        <div><a href= index.html>Home</a></div>  
        <div><a href= about.html>About</a></div>
        <div><a href= portfolio.html>Portfolio</a></div>
        <div><a href= blog.html>Blog</a></div>
        <div><a href= contact.html>Contact</a></div>   
        <form action="<%= products_path %>" method="GET">
            <input type="search" name="search" />

            <input type="submit" value="Search tool"/>
        </form>
    
    </section>

    <h1>All Products</h1>
   

    <h2><%= link_to("Create Products", new_product_path) %></h2>
    <section>

        <% @products.each do |product| %>
            <%= link_to(product) do %>
            
                <div class = productlist>
                    <%= image_tag "drill.jpg", alt:"power drill" %>
                    <h3><%= product.brand[:name] %></h3>
                    <h2><%= product.title %></h2>
                    <p><%= number_to_currency(product.price / 100.0) %></p>
                </div>
                <br/>
            <% end %>
        <% end %>


    </section>
</main>