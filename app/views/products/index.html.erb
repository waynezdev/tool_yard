<main id="product-index">
    <div class="banner-img"></div>
    <h1>All Products</h1>
    <form action="<%= products_path %>" method="GET">
        <input type="search" name="search" />

        <input type="submit" value="Search tool"/>
    </form>

    <%= link_to("Create Products", new_product_path) %>
    <section>

        <% @products.each do |product| %>
            <%= link_to(product) do %>
            
                <div>
                    <%#= image_tag product.pic if product.pic.attached? %>
                    <h2><%= product.title %></h2>
                    <p><%= number_to_currency(product.price / 100.0) %></p>
                </div>
            <% end %>
        <% end %>


    </section>
</main>